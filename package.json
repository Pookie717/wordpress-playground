{
  "name": "waasm-wordpress",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:web:html": "fswatch -o ./src/web/*.html | xargs -n1 -I{} cp src/web/*.html dist-web/",
    "dev:web:serve": "npx live-server ./public --port=8777 --entry-file=index.html",
    "dev:web:js-stackblitz": "esbuild --bundle src/web/stackblitz-client.jsx --outfile=dist-web/stackblitz-client.js --watch",
    "dev:web:css": "npx tailwindcss -i ./src/web/style.css -o ./dist-web/style.css --watch",
    "dev:web": "npm-run-all --parallel dev:web:*",
    "dev:node": "node ./src/node/node-server.mjs",
    "dev": "npm run web",

    "build:php:web": "cd wasm-build-pipeline/php && bash webworker-build-wasm.sh",
    "build:php:node": "cd wasm-build-pipeline/php && bash node-build-wasm.sh",
    "build:php": "npm-run-all build:php:*",
    "build:wp": "cd wasm-build-pipeline/wordpress-data && bash prepare-wordpress.sh && bash bundle-data.sh",

    "clean:php": "rm -rf dist-web/wasm-build-pipeline/php/output/*",
    "clean:wp": "rm -rf dist-web/wasm-build-pipeline/wordpress/output/* dist-web/wasm-build-pipeline/wordpress/preload/*",

    "publish:php:web": "cp wasm-build-pipeline/php/output/web-* dist-web/",
    "publish:php:node": "cp wasm-build-pipeline/php/output/node-* src/node/",
    "publish:wp:web": "cp wasm-build-pipeline/wordpress-data/output/* dist-web/ && rm -rf dist-web/{wp-admin,wp-content,wp-includes} && cp -r wasm-build-pipeline/wordpress-data/preload/wordpress-static/{wp-admin,wp-content,wp-includes} dist-web/",
    "publish:wp:node": "rm -rf src/node/wordpress/* && cp -r wasm-build-pipeline/wordpress-data/preload/wordpress-static/{wp-admin,wp-content,wp-includes} src/node/wordpress/ && cp -r wasm-build-pipeline/wordpress-data/preload/wordpress/* src/node/wordpress/"
  },
  "author": "Adam Zielinski",
  "license": "ISC",
  "dependencies": {
    "@babel/standalone": "^7.18.13",
    "babel-plugin-import-global": "0.0.6",
    "monaco-editor": "^0.34.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-inspector": "^6.0.1",
    "tailwindcss": "^3.1.8"
  },
  "devDependencies": {
    "@wordpress/eslint-plugin": "^13.0.0",
    "esbuild": "^0.15.5",
    "eslint": "^8.23.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5"
  }
}
