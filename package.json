{
  "name": "waasm-wordpress",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:html": "fswatch -o ./src/*.html | xargs -n1 -I{} cp src/*.html public/",
    "dev:serve": "npx live-server ./public --port=8777 --entry-file=index.html",
    "dev:js-stackblitz": "esbuild --bundle src/stackblitz-client.jsx --outfile=public/stackblitz-client.js --watch",
    "dev:css": "npx tailwindcss -i ./src/style.css -o ./public/style.css --watch",
    "dev": "npm-run-all --parallel dev:*",

    "build:php:webworker": "cd wasm-build-pipeline/php && bash webworker-build-wasm.sh",
    "build:php:node": "cd wasm-build-pipeline/php && bash node-build-wasm.sh",
    "build:php": "npm-run-all build:php:*",
    "build:wp": "cd wasm-build-pipeline/wordpress-data && bash prepare-wordpress.sh && bash bundle-data.sh",
    
    "clean:php": "rm -rf public/wasm-build-pipeline/php/output/*",
    "clean:wp": "rm -rf public/wasm-build-pipeline/wordpress/output/* public/wasm-build-pipeline/wordpress/preload/*",

    "publish:php": "cp wasm-build-pipeline/php/output/* public/",
    "publish:wp": "cp wasm-build-pipeline/wordpress-data/output/* public/ && rm -rf public/{wp-admin,wp-content,wp-includes} && cp -r wasm-build-pipeline/wordpress-data/preload/wordpress-static/{wp-admin,wp-content,wp-includes} public/"
  },
  "author": "Adam Zielinski",
  "license": "ISC",
  "dependencies": {
    "@babel/standalone": "^7.18.13",
    "babel-plugin-import-global": "0.0.6",
    "monaco-editor": "^0.34.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-inspector": "^6.0.1",
    "tailwindcss": "^3.1.8"
  },
  "devDependencies": {
    "@wordpress/eslint-plugin": "^13.0.0",
    "esbuild": "^0.15.5",
    "eslint": "^8.23.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5"
  }
}
